{
  "name": "Authorship-tags",
  "short_name": "Tags",  
  "description": "Tag generating extension.",
  "version": "1.0",
  "manifest_version": 2,
  "description": "This extension gets tags from your text fields!",
  "author": "Authorship: Thiago Rodrigues and Luis Baja√±a",
  "offline_enabled": false,
  "icons": {
    "16": "images/icons/small.png",
    "48": "images/icons/48x48.png",
    "128": "images/icons/naviologo.png",
    "144": "images/icons/144x144.png"
    },
   "browser_action": {
    "default_icon": "images/icons/authorship.png",
    "default_popup": "tags.html"
  },
  "permissions": [
    "activeTab", "tabs"
  ],
    "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/tagWorks.js"]
    }
  ],
  "web_accessible_resources" : ["/js/catchData.js"]
}
